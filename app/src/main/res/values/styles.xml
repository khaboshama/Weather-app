<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbarTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_23sp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <style name="dateTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="timeTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_30sp</item>
    </style>

    <style name="temperatureTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_90sp</item>
    </style>

    <style name="temperatureUnitTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_40sp</item>
    </style>

    <style name="CustomProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="errorTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <style name="descriptionTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

</resources>